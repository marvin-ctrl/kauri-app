'use client';

import { useParams, useRouter } from 'next/navigation';

export default function AssignTestPage() {
  const { id } = useParams<{ id: string }>();
  const router = useRouter();

  return (
    <main className="min-h-screen grid place-items-center bg-neutral-50 text-neutral-900 p-6">
      <div className="max-w-md w-full bg-white border border-neutral-200 rounded-xl shadow-sm p-6 space-y-4">
        <h1 className="text-2xl font-bold">Assign page</h1>
        <p className="text-sm text-neutral-700">Player ID: <b>{String(id)}</b></p>
        <button
          onClick={() => router.replace(`/players/${id}`)}
          className="px-3 py-2 rounded-md bg-neutral-200 hover:bg-neutral-300 text-neutral-900 font-semibold"
        >
          Back to profile
        </button>
      </div>
    </main>
  );
}
