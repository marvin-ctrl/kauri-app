'use client';
import { useParams, useRouter } from 'next/navigation';

export default function AssignTestPage() {
  const { id } = useParams<{ id: string }>();
  const r = useRouter();
  return (
    <main className="min-h-screen grid place-items-center p-6">
      <div className="max-w-md w-full border rounded-xl p-6 space-y-3 bg-white">
        <h1 className="text-2xl font-bold">Assign page</h1>
        <p className="text-sm">Player ID: <b>{String(id)}</b></p>
        <button onClick={()=>r.replace(`/players/${id}`)} className="px-3 py-2 rounded bg-neutral-200">Back</button>
      </div>
    </main>
  );
}
